<p id="notice"><%= notice %></p>


<h1>Grades</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Ascending',  grades_path(order:"asc") %></th>
      <th><%= link_to 'Descending', grades_path(order:"desc") %></th>
    </tr>
    <tr>
      <th>Student ID</th>
      <th>Student name</th>
      <th>Student grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student_id %></td>
        <td><%= grade.student_name %></td>
        <td><%= grade.student_grade %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        
        <% if current_user.account_id == 1 %>
          <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

